<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/searchBarSize"
    android:background="@drawable/bg_card"
    android:layout_marginTop="@dimen/padding"
    android:id="@+id/mt_search"

    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/button_date"
        android:gravity="center"
        android:textSize="@dimen/textSize"
        android:paddingLeft="@dimen/marginM"
        android:paddingRight="@dimen/marginM"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/searchWidgetSize"
        android:layout_marginStart="@dimen/marginM"
        android:layout_marginLeft="@dimen/marginM"
        android:background="@drawable/selector_confirm"
        android:text="日期"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/meetingEdit"
        android:layout_width="0dp"
        android:layout_height="@dimen/searchWidgetSize"
        android:layout_marginStart="@dimen/marginM"
        android:layout_marginLeft="@dimen/marginM"
        android:layout_marginEnd="@dimen/marginM"
        android:layout_marginRight="@dimen/marginM"
        android:layout_weight="1"
        android:background="@drawable/rec_grey"
        android:drawableStart="@mipmap/icon_search"
        android:drawableLeft="@mipmap/icon_search"
        android:drawablePadding="@dimen/padding"
        android:hint="@string/searchByType"
        android:lines="1"
        android:paddingLeft="@dimen/marginM"
        android:paddingRight="@dimen/marginM"
        android:textSize="@dimen/textSizeM" />



</LinearLayout>